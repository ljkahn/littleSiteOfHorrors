<main class="container">
  <div class="row">
    <div class="col-lg-4">


      <img
        class="d-flex mb-5"
        id="previewIcon"
        src="/icons/placeholder.jpg"
        alt="placeholder"
        width="200px"
        height="200px"
      />

      <select id="dropdownIcon" class="form-select" aria-label="Filter select">
        <option selected>&#x29E9; Choose your profile image</option>
      </select>

      <div class="form-group">
        <label class="updateLabel" for="exampleFormControlTextarea1">Name</label>
        <textarea class="form-control textUpdate" id="name" rows="3"></textarea>
        <label class="updateLabel" for="exampleFormControlTextarea1">Location</label>
        <textarea class="form-control textUpdate" id="location" rows="3"></textarea>

        <label for="exampleFormControlSelect1">Spooky Scale</label>
        <select class="form-control" id="spooky_scale">
          <option value="1">🎃 G Rated</option>
          <option value="2">🎃🎃 PG Rated</option>
          <option value="3">🎃🎃🎃 PG 13 Rated</option>
          <option value="4">🎃🎃🎃🎃 R Rated</option>
          <option value="5">🎃🎃🎃🎃🎃 NC 17 Rated</option>
        </select>
      </div>

    </div>

    <div class="col-lg-4 d-flex flex-column justify-content-end">
      <div class="card user-top5">
        <ul class="card-body" id="sortable-container">
          <p class="top5">My Top Five Movies</p>
          {{#each profile.Movies as |movie| }}
          <div id="top_movie1 sortable" class="card p-1">

            <div class="p-1 fav-movie-cards">
              <li class="top5Edit fs-5">{{movie.title}}</li>
              
              <button id="deleteMovie">⚰️</button>
            </div>

          </div>
            {{/each}}
        </ul>
        <p class="p-3">Drag the titles to sort into a different order. </p>
      </div>
      <div>
        {{!-- <a href="/profile"> --}}
          <button id="save-profile-btn" class="edit-profile-btn p-3">Save
            Profile</button>
          {{!-- </a> --}}
      </div>
    </div>

    <div class="col-lg-4 d-flex align-items-end">
      <div class="form-group">
        <label class="updateLabel" for="exampleFormControlTextarea1">My Favorite
          Spooky Movie Snack Is:</label>
        <textarea class="form-control textUpdate" id="answer_1" rows="3"></textarea>
        <label class="updateLabel" for="exampleFormControlTextarea1">My Top 3
          October Activites Are:</label>
        <textarea class="form-control textUpdate" id="answer_2" rows="3"></textarea>
        <label class="updateLabel" for="exampleFormControlTextarea1">My Best
          Halloween Costume Ever Was:</label>
        <textarea class="form-control textUpdate" id="answer_3" rows="3"></textarea>
      </div>

    </div>

  </div>

</main>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script src="/js/profileEdit.js"></script>